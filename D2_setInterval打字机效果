	    		<script>var showDiv = $("#divShow");

function doit(str){ 
	showDiv.html('');
	showOneChar(str);
}


var arr=[];
var l=0;
var t=0;
function showOneChar(txt){
	arr = [];
	l=txt.length;
	for(var i = 0; i < l; i++){
		arr[i] = txt.substr(i,1);	 
	}
	t=0;
  showDiv.append("</br>");
	init=setInterval("print()",100);
}



function print(){
  if(t < l){
		showDiv.append(arr[t]);
		t++;
	}else{
		clearInterval(init);
		t=0;
	}

}</script>
	
