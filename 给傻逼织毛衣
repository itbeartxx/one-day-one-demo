	    		<script>var showDiv = $("#divShow");

function doit(obj){ 
$(obj).attr("disabled", true);
  showLine("工作中Zzzzzzz");
  showLine("傻逼才在夏天穿毛衣！");
  showLine("罢工~");
  showLine("<button onclick='doitAgain(this)'>点我继续给傻逼织毛衣</button>");
}

function doitAgain(obj){ 
$(obj).attr("disabled", true);
  showLine("重新工作中Zzzzzzz");
  showLine("真的要给傻逼织毛衣么？");
  showLine("罢工~");
  showLine("<button onclick='seeYou(this)'>点我确定继续给傻逼织毛衣</button>");
}

function seeYou(obj){ 
	$(obj).attr("disabled", true);
  showLine("不织了！");
  showLine("你给傻逼织毛衣");
  showLine("你比傻逼还傻逼");
}

function showLine(txt){
  showDiv.append("</br>");
  showDiv.append(txt);
  showDiv.append("</br>");
}</script>
	
